.panel.panel-primary.irish-events
  - if @ongoing_events.any?
    .panel-heading
      .text-center Ongoing Events
    - @ongoing_events.each_with_index do |event, index|
      %div{class: index == @ongoing_events.size - 1 ? "panel-body last-panel-body" : "panel-body"}
        = link_to event.name, event
        %br
        = event.dates
        %br
        - if event.streaming_url.present?
          %span.label.label-danger
            %span.glyphicon.glyphicon-facetime-video
            Live Stream
        - elsif event.live_games_url.present? || event.live_games_url2.present?
          %span.label.label-default
            %span.glyphicon.glyphicon-tower
            Live Boards
  .panel-heading.panel-heading-middle
    .text-center Upcoming Events
  - @upcoming_events.each_with_index do |event, index|
    %div{class: index == @upcoming_events.size - 1 ? "panel-body last-panel-body" : "panel-body"}
      = link_to event.name, event
      %br
      = event.dates
      %br
        %span.event-metadata.text-muted
          -# Time Controls, if any
          - if event.time_controls.present?
            %span
              - event.time_controls.each_with_index do |control, i|
                = t("event.time_controls.#{control}")
                - if i < event.time_controls.size - 1
                  = ", "
          -# Category, if any and not the default/assumed value
          - if event.category.present? && event.category != "irish"
            %span
              =t("event.category.#{event.category}")
          -# Event is FIDE-rated?
          - if event.is_fide_rated.present? && event.is_fide_rated
            %span
              =t("event.fide_rated_event")
  .panel-footer.text-center= link_to t("event.calendar"), events_path
