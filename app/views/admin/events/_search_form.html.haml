= form_tag admin_events_path, method: :get, class: "form-inline", role: "form" do
  = render "utils/inline_text_field", param: :name, text: t("name"), size: 30
  - if current_user.admin?
    = render "utils/inline_select", param: :user_id, text: t("event.creator"), menu: user_menu(params[:user_id], t("all"))
  = button_tag t("search"), type: "submit", class: "btn btn-default pull-right"
