= form_tag admin_fees_path, method: :get, class: "form-inline", role: "form" do
  = render "utils/inline_select", param: :type, text: "Type", menu: fee_type_menu(params[:type])
  = render "utils/inline_select", param: :active, text: "Active", menu: active_menu(params[:active])
  = render "utils/inline_select", param: :sale, text: "Past, current or future", menu: fee_sale_menu(params[:sale])
  .voffset2
  = render "utils/inline_text_field", param: :name, text: t("description"), size: 39
  = render "utils/inline_text_field", param: :event_id, text: t("fee.event_id_no_hint"), width: 2
  = button_tag t("search"), type: "submit", class: "btn btn-default pull-right"
