- content_for :title, t("item.lifetime_create")
- content_for :javascript do
  = render(:partial => "items/utils", :formats => [:js])

= form_for :admin, url: lifetime_create_admin_items_path, method: 'post' do |form|
  = hidden_field_tag "item_player_id"
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-info
        .panel-heading
          %h4.panel-title
            = t("item.lifetime_create")
        .panel-body
          = render "fees/detail", term: "Name & ID", desc: @player_name, id: "player_name"
        .panel-footer
          = render "items/player_ids_button"
          = link_to t("cancel"), :back, class: "btn btn-default btn-sm"
          = form.submit t("confirm"), class: "btn btn-info btn-sm pull-right"

= render "player_ids/modal", title: t("item.member.select")
%script
  = render(:partial => "items/player_ids_callback", :handlers => [:erb], :formats => [:js])
